generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Pet {
  id      Int     @id @default(autoincrement())
  name    String
  age     Int
  type    PetType
  breed   String
  ownerId Int
  owner   Owner   @relation(fields: [ownerId], references: [id])
}

model Owner {
  id    Int    @id @default(autoincrement())
  name  String
  phone String
  pets  Pet[]
}

enum PetType {
  CAT
  DOG
}

